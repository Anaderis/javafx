<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-image: url('home.png');" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.HomeController">
    <center>
        <VBox fx:id="mainContainer" alignment="TOP_CENTER" opacity="0.9" spacing="30.0">
            <Button fx:id="btnEmployee" alignment="BOTTOM_CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#handleViewEmployees" text="Les employés Kybu" textFill="WHITE" style="-fx-background-color: black;
                -fx-text-fill: white;
                -fx-font-size: 20px;
                -fx-padding: 10px 20px;
                -fx-background-radius: 8px;
                -fx-border-radius: 8px;
                -fx-border-width: 2px;
                -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 4);
                -fx-transition: all 0.3s;" >
            <font>
               <Font name="Droid Sans Fallback"  />
            </font>
            <cursor>
               <Cursor fx:constant="OPEN_HAND" />
            </cursor></Button>
            <Button fx:id="btnServices" alignment="CENTER" contentDisplay="CENTER" onAction="#handleViewServices" textFill="WHITE" style=" -fx-background-color: black;
                -fx-text-fill: white;
                -fx-font-size: 20px;
                -fx-padding: 10px 20px;
                -fx-background-radius: 8px;
                -fx-border-radius: 8px;
                -fx-border-width: 2px;
                -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 4);
                -fx-transition: all 0.3s;" text="Les services Kybu" >
            <font>
               <Font name="Droid Sans Fallback"  />
            </font></Button>
            <Button fx:id="btnSites" alignment="CENTER" contentDisplay="CENTER" onAction="#handleViewSites" text="Nos sites en France" textFill="WHITE" style="-fx-background-color: black;
                -fx-text-fill: white;
                -fx-font-size: 20px;
                -fx-padding: 10px 20px;
                -fx-background-radius: 8px;
                -fx-border-radius: 8px;
                -fx-border-width: 2px;
                -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 4);
                -fx-transition: all 0.3s;">
                <font>
                    <Font name="Droid Sans Fallback"  />
                </font>
           </Button>
            <Button fx:id="btnLogout" alignment="CENTER" contentDisplay="CENTER" onAction="#handleLogout" text="Déconnexion" textFill="WHITE" style="-fx-background-color: black;
                -fx-text-fill: white;
                -fx-font-size: 20px;
                -fx-padding: 10px 20px;
                -fx-background-radius: 8px;
                -fx-border-width: 2px;
                -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 4);
                -fx-transition: all 0.3s;" >
                <font>
                    <Font name="Droid Sans Fallback"  />
                </font>
           </Button>
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
         <effect>
            <Blend />
         </effect>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets right="830.0" top="280.0" />
         </padding>
        </VBox>
    </center>
</BorderPane>
