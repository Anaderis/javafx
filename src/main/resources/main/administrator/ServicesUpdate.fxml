    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" textFill="WHITE" text="Mise à jour du service" />

    <GridPane alignment="CENTER" hgap="10" prefHeight="196.0" prefWidth="460.0" vgap="10">
        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" textFill="WHITE" />
        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" textFill="WHITE" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Nombre de salariés :" GridPane.columnIndex="0" GridPane.rowIndex="1" textFill="WHITE" />
        <TextField fx:id="headcountField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="2" textFill="WHITE"/>
        <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints maxWidth="139.0" minWidth="124.0" prefWidth="139.0" />
         <ColumnConstraints maxWidth="164.0" minWidth="149.0" prefWidth="149.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnSave" onAction="#handleUpdate" style="-fx-background-color: #4f5f70;" textFill="WHITE" text="Enregistrer" />
        <Button fx:id="btnCancel" onAction="#handleCancel" style="-fx-background-color: #4f5f70;" textFill="WHITE" text="Annuler" />
    </HBox>

</VBox>
