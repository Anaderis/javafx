<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-image: url('delete-resetti.png');" alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.CRUD.EmployeesCRUD">

    <!-- ✅ Message de confirmation -->
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" textFill="WHITE" text="Êtes-vous sûr de vouloir supprimer cet employé ?" />

    <!-- ✅ Boutons de confirmation -->
    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="btnConfirm" onAction="#handleDelete" style="-fx-background-color: #4f5f70;"  textFill="WHITE" text="Oui" />
        <Button fx:id="btnCancel" onAction="#handleCancel" style="-fx-background-color: #4f5f70;"  textFill="WHITE" text="Annuler" />
    </VBox>

</VBox>
